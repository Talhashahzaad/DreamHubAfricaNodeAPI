<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Password Reset</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #D9A928;
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }


    main {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    
    .logo {
      margin-bottom: 20px;
      text-align: center;
    }

    .logo img {
      max-width: 220px;
      height: auto;
    }

  
    .content-box {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
      background-color: #FCEEA9;
      border-radius: 20px;
      padding: 30px;
      width: 913px;
      max-width: 95%;
      box-sizing: border-box;
    }

    
    .left {
      flex: 1;
      text-align: center;
    }

    .left img.lock {
      max-width: 60px;
      margin-bottom: 10px;
    }

    .left h3 {
      font-size: 18px;
      margin: 15px 0 5px;
      color: #1B4D2B;
    }

    .left p {
      font-size: 13px;
      color: #333;
      margin: 0;
    }

    .right {
      flex: 1;
      text-align: center;
    }

    .right p {
      font-size: 14px;
      font-weight: bold;
      margin: 0 0 15px;
      color: #1B4D2B;
    }

    .input {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
      box-sizing: border-box;
    }

    .disclaimer {
      display: block;
      font-size: 12px;
      color: #555;
      margin-bottom: 10px;
      text-align: left;
    }


    footer{
    margin-top:50px;
    }

    .button {
      display: inline-block;
      background-color: #004C25;
      color: #fff;
      padding: 12px 20px;
      border-radius: 8px;
      font-size: 14px;
      border: none;
      cursor: pointer;
    }

    footer {
      text-align: center;
      font-size: 12px;
      color: #333;
      padding: 15px 10px;
      background-color: #FCEEA9;
      border-top: 1px solid #ccc;
    }

    
    @media (max-width: 768px) {
      .content-box {
        flex-direction: column;
        text-align: center;
      }

      .disclaimer {
        text-align: center;
      }
    }
  </style>
</head>

<body>

  <main>
    <!-- Logo -->
    <div class="logo">
      <img src=`${process.env.FRONTEND_URL}/assets/logo/518x360.png` alt="DreamHub Africa" />
    </div>

    <!-- Content -->
    <div class="content-box">


      <!-- Left column -->
      <div class="left">
        <img class="lock" src=`${process.env.FRONTEND_URL}/assets/default/lock.png` alt="Lock Icon" />
        <h3>Reset Your Password</h3>
        <p>Enter your new password below to reset access to your account.</p>
      </div>

      <!-- Right column -->
      <div class="right">
        <form action="/reset-password/<%= token %>" method="POST">
          <p>
            <%= email %>
          </p>

           <input type="hidden" name="email" value="<%= email %>" />

          <!-- New Password -->
          <input type="password" id="password" name="password" placeholder="Enter New Password" class="input"
            required />

          

              <small class="disclaimer">
                Password must be at least <strong>6 characters</strong>, and include
                <strong>1 uppercase</strong>, <strong>1 lowercase</strong>,
                <strong>1 number</strong>, and <strong>1 symbol</strong>.
              </small>

              <!-- Confirm Password -->
              <input type="password" name="confirmPassword" placeholder="Confirm New Password" class="input" required />

              <!-- Show confirmPassword error if exists -->
              <!-- Confirm password field -->
  

                  <button type="submit" class="button">Reset Password</button>
        </form>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer>
    &copy; <%= new Date().getFullYear() %> DreamHub Africa. All rights reserved. <br />
  </footer>

</body>

</html>